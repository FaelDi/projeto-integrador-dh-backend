<%- include('parts/head', {title:'Registrar', page: 'register'}); %>

<div class="main_container">

  <section class="bloco">
    <div class="register-info">
      <h1>Cadastro</h1>
      <p>Faça seu cadastro, entre na plataforma e envie ou receba orçamentos...</p>
      <a href="/login" class="back-link">
        Já tenho Login!
      </a>
    </div>

    <div class="register-form">
      <form action="/usuarios/cadastrar" method="POST">
        <input placeholder="Digite seu nome" name='nome' />

        <input type="email" placeholder="Digite seu melhor e-mail" name='email' />

        <input placeholder="Digite seu CPF" name='cpf' />

        <input type="password" placeholder="Digite uma senha" name='senha' />

        <button class="button" type="submit">Cadastrar</button>

      </form>
    </div>
  </section>
</div>

<%- include('parts/foot'); %>